defn sha64 sha1base64

defn guc gunzip -c
defn guz gunzp
defn gzc gzip -c

gzip_copy() {
    for arg in "$@"; do
        gzip -c $arg > $arg.gz
    done
}
export -f gzip_copy
defn gzic gzip_copy
defn gzcp gzip_copy

gunzip_pipe() {
    if [ $# -eq 1 ]; then
        cat | gunzip -c | "$1"
    else
        # last arg
        gz="${@: -1}"
        set -- "${@:1:$(($#-1))}"
        gunzip -c "$gz" | "$@"
    fi
}
export -f gunzip_pipe
defn up gunzip_pipe
